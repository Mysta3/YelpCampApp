<% include ../partials/header %>
<% if(currentUser && currentUser.isAdmin){ %>
<h1>Hello Admin!</h1>
<%} %>
<div class="container">
    <header class="jumbotron">
        <div class="container">
                <div class="col-md-12">
                        <% if(noMatch !== null) { %>
                        <h3><%= noMatch %></h3>
                        <% } else { %>   
            <h1>Welcome to YelpCamp!</h1>
            <% } %>
                </div>
            <p>View our handpicked campgrounds from all over!</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
            </p>
            <p>
                <form action="/campgrounds" method="GET" class="form-inline">
                    <div class="form-group">
                        <input type="text" name="search" placeholder="campground search..." class="form-control">
                        <input type="submit" value="Search" class="btn btn-primary">
                    </div>
                </form>
            </p>
        </div>
    </header>

    <div class="row" style="display: flex; flex-wrap: wrap;">     
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-4 col-sm-6">
                <div class="card-deck">
                        <div class="card">
                            <img class="img-thumbnail img-fluid rounded" src="<%= campground.image %>">
                            <div class="card-body">
                                <h6 class="card-title"><%= campground.name %> </h6>
                                <p>
                                    <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary btn-sm">More Info</a>
                                </p>                            
                            </div>
                        </div>
                </div>        
            </div>
        <% }) %>
    </div>  

    <section>
        <p><a href="/">Go Home</a></p>
    </section>
</div>

<% include ../partials/footer %>